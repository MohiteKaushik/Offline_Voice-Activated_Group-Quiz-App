<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a2e"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvCategoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Category"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>

        <!-- Category Selection -->
        <RadioGroup
            android:id="@+id/rgCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvCategoryTitle"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbHeroMovies"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="ðŸŽ¬ Hero's Movies"
                android:textSize="17sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/radio_button_bg"
                android:padding="18dp"
                android:button="@null"
                android:drawableEnd="@android:drawable/radiobutton_off_background"
                android:layout_marginBottom="12dp"/>

            <RadioButton
                android:id="@+id/rbGuessbyImage"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="ðŸ–¼ï¸ Guess by Poster"
                android:textSize="17sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/radio_button_bg"
                android:padding="18dp"
                android:button="@null"
                android:drawableEnd="@android:drawable/radiobutton_off_background"
                android:layout_marginBottom="12dp"/>

            <RadioButton
                android:id="@+id/rbGuessBySong"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="ðŸŽµ Guess by Song"
                android:textSize="17sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/radio_button_bg"
                android:padding="18dp"
                android:button="@null"
                android:drawableEnd="@android:drawable/radiobutton_off_background"
                android:layout_marginBottom="12dp"/>

            <!-- NEW: Add this RadioButton -->
            <RadioButton
                android:id="@+id/rbGuessByDialogue"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="ðŸŽ¬ Guess by Dialogue/Meme"
                android:textSize="17sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/radio_button_bg"
                android:padding="18dp"
                android:button="@null"
                android:drawableEnd="@android:drawable/radiobutton_off_background"
                android:layout_marginBottom="12dp"/>

            <RadioButton
                android:id="@+id/rbGuessHero"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="ðŸŒŸ Guess Hero Names"
                android:textSize="17sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/radio_button_bg"
                android:padding="18dp"
                android:button="@null"
                android:drawableEnd="@android:drawable/radiobutton_off_background"/>

        </RadioGroup>

        <!-- Mic Mode Selection -->
        <TextView
            android:id="@+id/tvMicModeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Microphone Mode"
            android:textSize="24sp"
            android:textColor="#FFD700"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/rgCategory"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"/>

        <RadioGroup
            android:id="@+id/rgMicMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvMicModeTitle"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <RadioButton
                android:id="@+id/rbManualButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:text="ðŸ”˜ Button Mode\n(Press to speak)"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/radio_button_bg"
                android:padding="12dp"
                android:button="@null"
                android:gravity="center"
                android:layout_marginEnd="8dp"/>

            <RadioButton
                android:id="@+id/rbAlwaysOnWakeword"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:text="ðŸŽ¤ Always-On\n(Say 'movie/hero' anytime)"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/radio_button_bg"
                android:padding="12dp"
                android:button="@null"
                android:gravity="center"
                android:layout_marginStart="8dp"/>

        </RadioGroup>


        <Button
            android:id="@+id/btnStartGame"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="START GAME"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/rgMicMode"
            android:layout_marginTop="24dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>