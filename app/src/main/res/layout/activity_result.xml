<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a2e"
    android:padding="24dp">

    <!-- Trophy Icon -->
    <ImageView
        android:id="@+id/imgTrophy"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@android:drawable/star_big_on"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"
        app:tint="#FFD700" />

    <!-- Game Over Text -->
    <TextView
        android:id="@+id/tvGameOver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Over!"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imgTrophy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Winner Text -->
    <TextView
        android:id="@+id/tvWinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team A Wins!"
        android:textSize="40sp"
        android:textColor="#FFD700"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvGameOver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Final Scores Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardScores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#2e2e3e"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvWinner"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Final Scores"
                android:textSize="20sp"
                android:textColor="#87CEEB"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tvTeam1Result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team A: 20"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tvTeam2Result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team B: 15"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Play Again Button -->
    <Button
        android:id="@+id/btnPlayAgain"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="PLAY AGAIN"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#FFD700"
        android:textColor="#1a1a2e"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>